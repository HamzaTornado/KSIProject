@model Data.Programme

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_dashboardAdmin.cshtml";
}
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.16/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.16/dist/summernote-lite.min.js"></script>

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Programme</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group" hidden="hidden">
        @Html.LabelFor(model => model.UtilisateurID, "UtilisateurID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("UtilisateurID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.UtilisateurID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <Label class = "control-label col-md-2">Nom de Programme</Label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nom_prog, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nom Programme" } })
            @Html.ValidationMessageFor(model => model.Nom_prog, "", new { @class = "text-danger" })
        </div>
    </div>

    
   
    <div class="form-group">
        <div class="col-md-10">
            Objectif De Programme
            <div id="summernote" name="Objectif_prog"></div>
        </div>
        </div>

        <div class="form-group">
            <Label class="control-label col-md-2">Date Debut</Label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_debut, new { htmlAttributes = new { @class = "form-control", @placeholder = "AAAA/MM/JJ" } })
                @Html.ValidationMessageFor(model => model.Date_debut, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <Label class="control-label col-md-2">Date Fin</Label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_fin, new { htmlAttributes = new { @class = "form-control", @placeholder = "AAAA/MM/JJ" } })
                @Html.ValidationMessageFor(model => model.Date_fin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <Label class="control-label col-md-2">Donateur</Label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Donateur, new { htmlAttributes = new { @class = "form-control", @placeholder = "Donateur" } })
                @Html.ValidationMessageFor(model => model.Donateur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Budget </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.budget, new { htmlAttributes = new { @class = "form-control", @placeholder = "Budget" } })
                @Html.ValidationMessageFor(model => model.budget, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    <style>
        .note-frame {
            width: 813px;
        }
    </style>
    <script>
        $('#summernote').summernote({
            placeholder: 'Objectif de Programme',
            tabsize: 2,
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
